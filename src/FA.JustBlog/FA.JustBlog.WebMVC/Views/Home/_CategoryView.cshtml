@model List<FA.JustBlog.WebMVC.ViewModel.CategoryViewModel>
@for(int i = 0; i < 4; i++)
{
<li class="nav-item active">
    @Html.ActionLink(Model[i].Name, "Details", "Categories", new { id = Model[i].Id}, new { @class = "nav-link" })
</li>
}
<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Other Categories
    </a>
    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        @for(int i = 5; i < Model.Count; i++)
            {
                <a class="dropdown-item" href="@Url.Action("Details", "Categories", new { id = Model[i].Name })">@Model[i].Name</a>
            }
    </div>
</li>
